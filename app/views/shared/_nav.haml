%nav.m-bg-blue.l-relative
  .l-max-content-width.l-horizontal-center.l-content-padding
    .l-relative.l-nav-height
      .hamburger.l-hide-on-tablet.m-clickable.l-absolute-vertical-center{data: {hook: "hamburger"}}

      = link_to root_path, class: "a-hover-opacity l-nav-logo-position l-absolute" do
        .madebymiles_logo

      .l-hide-on-mobile.l-absolute.l-right.l-height-100{data: {name: "nav-tabs"}}
        - nav_tabs(@active_nav_tab).each do |tab|
          - if FeatureFlipper.active_names.include? tab.text
            = link_to tab.path, class: "l-nav-tab-padding l-height-100 l-inline-block a-hover-nav-tab" do
              %div{class: "#{tab.classes} l-nav-tab-text" }
                = tab.text

  .l-hide-on-tablet
    .l-hide{data: {hook: "hamburger-menu"}}
      .col-1-2.l-nav-menu.l-top.l-absolute.m-bg-darkest-grey.l-z-index-5
        .l-max-content-width.l-horizontal-center.l-content-padding
          - nav_tabs(@active_nav_tab).each do |tab|
            - if FeatureFlipper.active_names.include? tab.text
              .l-block.l-small-vertical-padding
                = link_to tab.text, tab.path, class: "m-font-bold m-font-medium m-color-white"

:javascript
  new Hamburger($("[data-hook='hamburger']"))