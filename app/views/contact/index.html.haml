- if flash[:notice].present?
  .m-bg-red
    .l-max-content-width.l-horizontal-center.l-content-padding.l-small-vertical-padding
      .m-thin.l-width-100.m-large.m-color-white= flash[:notice]

.m-bg-light-grey
  .l-max-content-width.l-horizontal-center.l-content-padding.l-large-vertical-padding
    .columns.gutters
      .col-1-1.col-5-8-lrg
        .m-larger.m-bold.m-color-dark-grey= "Contact me"
        .l-medium-bottom-margin= render "shared/line"
        = semantic_form_for @message do |f|
          = f.inputs do
            = f.input :sender_name, placeholder: "Name", maxlength: 254, input_html: {class: "l-medium-bottom-margin l-width-100 l-pad-fix m-bold m-medium l-smallest-padding"}
            = f.input :sender_email, placeholder: "Email Address", maxlength: 254, input_html: {class: "l-width-100 l-pad-fix m-bold m-medium l-smallest-padding"}, wrapper_html: {class: "l-medium-bottom-margin l-width-100"}
            = f.input :subject, placeholder: "Subject / Topic", maxlength: 254, input_html: {class: "l-medium-bottom-margin l-width-100 l-pad-fix m-bold m-medium l-smallest-padding"}
            = f.input :body, placeholder: "Your message or question", maxlength: 65535, input_html: {class: "l-medium-bottom-margin l-width-100 l-pad-fix m-bold m-medium l-smallest-padding"}
          = f.actions do
            = f.action :submit, label: "Submit"
