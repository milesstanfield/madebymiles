.l-width-100.m-large.m-color-darkest-grey= flash[:notice]
.m-bg-light-grey
  .l-max-content-width.l-horizontal-center.l-content-padding.l-large-vertical-padding
    .columns.gutters
      .col-1-1.col-5-8-lrg
        .m-larger.m-bold.m-color-dark-grey= "Contact me"
        = render "shared/line"
        = semantic_form_for @message do |f|
          = f.inputs do
            = f.input :sender_name, placeholder: "Name", maxlength: 254
            = f.input :sender_email, placeholder: "Email Address", maxlength: 254
            = f.input :subject, placeholder: "Subject / Topic", maxlength: 254
            = f.input :body, placeholder: "Your message or question", maxlength: 65535
          = f.actions do
            = f.action :submit, label: "Submit"
